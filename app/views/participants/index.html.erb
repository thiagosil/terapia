<h1><%= t('participant') %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td class="actions"><%= link_to 'Mostrar', participant %>
        <%= link_to 'Editar', edit_participant_path(participant) %>
        <%= link_to 'Remover', participant, method: :delete, data: { confirm: 'Tem certeza?' } %><td/>
      </tr>
    <% end %>
  </tbody>
</table

<br>

<%= button_to 'Cadastrar Participante', new_participant_path, :method => 'get', :class => "btn btn-info" %>